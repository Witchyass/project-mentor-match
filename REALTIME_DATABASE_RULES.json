{
  "rules": {
    "users": {
      ".read": "auth.uid !== null",
      "$uid": {
        ".write": "auth.uid === $uid"
      }
    },
    "requests": {
      ".read": "auth.uid !== null",
      "$requestId": {
        ".read": "auth.uid !== null && (data.child('from').val() === auth.uid || data.child('to').val() === auth.uid)",
        ".write": "auth.uid !== null && (!data.exists() || data.child('from').val() === auth.uid || data.child('to').val() === auth.uid)"
      }
    },
    "notifications": {
      ".read": "auth.uid !== null",
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid !== null",
        "$notifId": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid !== null"
        }
      }
    },
    "sessions": {
      ".read": "auth.uid !== null",
      "$sessionId": {
        ".read": "auth.uid !== null && (data.child('menteeId').val() === auth.uid || data.child('mentorId').val() === auth.uid)",
        ".write": "auth.uid !== null"
      }
    },
    "messages": {
      ".read": "auth.uid !== null",
      "$conversationId": {
        ".read": "auth.uid !== null && $conversationId.contains(auth.uid)",
        ".write": "auth.uid !== null && $conversationId.contains(auth.uid)"
      }
    },
    "chats": {
      ".read": "auth.uid !== null",
      "$conversationId": {
        ".read": "auth.uid !== null && $conversationId.contains(auth.uid)",
        ".write": "auth.uid !== null && $conversationId.contains(auth.uid)"
      }
    },
    "matches": {
      ".read": "auth.uid !== null",
      "$matchId": {
        ".read": "auth.uid !== null && (data.child('menteeId').val() === auth.uid || data.child('mentorId').val() === auth.uid)",
        ".write": "auth.uid !== null"
      }
    }
  }
}